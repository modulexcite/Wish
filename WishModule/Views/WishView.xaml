<UserControl x:Class="Wish.Views.WishView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Views="clr-namespace:Wish.Views" xmlns:CodeBoxControl="clr-namespace:CodeBoxControl;assembly=CodeBoxControl" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="OnUserControlLoaded">
    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static Views:WishView.TabNew}" Executed="NewTabRequest"/>
    </UserControl.CommandBindings>

    <CodeBoxControl:CodeBox x:Name="textBox"
             FontFamily="{Binding Terminal.FontFamily, Mode=OneWay}"
             FontSize="{Binding Terminal.FontSize, Mode=OneWay}"
             Background="{Binding Terminal.Background, Mode=OneWay}"
             Foreground="{Binding Terminal.Foreground, Mode=OneWay}"
             VerticalScrollBarVisibility="Auto"
             AcceptsReturn="True"
             TextChanged="ScrollToEnd"
             Focusable="True">
        <CodeBoxControl:CodeBox.Text>
            <Binding Path="Terminal.Text" UpdateSourceTrigger="PropertyChanged"/>
        </CodeBoxControl:CodeBox.Text>
        <CodeBoxControl:CodeBox.InputBindings>
            <KeyBinding Command="{Binding Path=CommandEntered}" Key="Enter" />
         </CodeBoxControl:CodeBox.InputBindings>
    </CodeBoxControl:CodeBox>
</UserControl>
